// Guest List
let guestList: string[] = ["Elon Musk", "Marie Curie",  "Thomas Edison", "Leonardo da Vinci", "Bill Gates"];

for (let i = 0; i < guestList.length; i++) {
  console.log(`Dear ${guestList[i]}, you are cordially invited to dinner at my place. Please join us for an evening of great food and conversation.`);
}

// Changing Guest List
let guestList: string[] = ["Elon Musk", "Marie Curie",  "Thomas Edison", "Leonardo da Vinci", "Bill Gates"];

for (let i = 0; i < guestList.length; i++) {
  console.log(`Dear ${guestList[i]}, you are cordially invited to dinner at my place. Please join us for an evening of great food and conversation.`);
}
  for (let i = 0; i < guestList.length; i++) {
  console.log(`Dear ${guestList[i]}, you are cordially invited to dinner at my place. Please join us for an evening of great food and conversation.`);
}

let guestWhoCantMakeIt: string = "Marie Curie";

console.log(`${guestWhoCantMakeIt} can't make it to the dinner.`);

// Find the index of the guest who can't make it
let index = guestList.indexOf(guestWhoCantMakeIt);

if (index !== -1) {
  // Replace the guest who can't make it with a new guest
  guestList[index] = "Nikola Tesla";
}

// Print the second set of invitation messages
for (let i = 0; i < guestList.length; i++) {
  console.log(`Dear ${guestList[i]}, you are cordially invited to dinner at my place. Please join us for an evening of great food and conversation.`);
}

//Seeing the world
let place : string[] = ["Norway","Greece","Paris","Hunza"];

console.log(`Original Array= ${place}`)

let copy : string[] = [...place].sort();//Making a copy of the original data and sorting it 
console.log(`\nAlphabetically Sorted Array= ${copy}`);

console.log(`\nOriginal Array= ${place}`)

copy = copy.reverse();// Reversing the sorted array to make it alphabetically reversed
console.log(`\nReverse Alphabetically Sorted Array= ${copy}`);

console.log(`\nOriginal Array= ${place}`)

place.reverse();// reversing the orignal array
console.log(`\nReversed Array= ${place}`)

place.reverse();//reversing it again to make it go back to original
console.log(`\nOriginal Array= ${place}`)

place.sort();// Converting the original array into alphabetic order
console.log(`\nAlphabetic Order= ${place}`)

place.reverse();
console.log(`\nReverse Alphabetic Order= ${place}`)
